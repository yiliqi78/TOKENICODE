{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TOKENICODE",
  "version": "0.6.8",
  "identifier": "com.tinyzhuang.tokenicode",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TOKENICODE",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFMkFFQkY4OTZENTc2NTYKUldSV2R0V1crT3NxM3VQdFJCMmlmOURGTW1WZWlMQk9YeWVFV3VxQVB2WnJtWXRpVUxWTGxobU4K",
      "endpoints": [
        "https://gitee.com/yiliqiseven/TOKENICODE/raw/main/latest.json",
        "https://github.com/yiliqi78/TOKENICODE/releases/latest/download/latest.json"
      ]
    }
  }
}
